extends ../_shared/_form-master
block body
    div.page-bg
        div.logo
            img(src="../static/css/images/logo.png", alt="logo")
        div.form-wraper
            != messages()
            div.form
                if user
                    p
                        | You are already signed in!
                    div.button
                        a(href="/") Home Page
                else
                    form(action='/auth/sign-up', method="POST", enctype="multipart/form-data")
                        div.input-wrapper
                            input.form-control(type="text" name="username" placeholder="Username" required)
                        div.input-wrapper
                            input.form-control(type="password" name="password" placeholder="Password" required)
                        div.input-wrapper
                            input.form-control(type="text" name="bio" placeholder="Short Bio" required)
                        div.input-wrapper
                            label.btn.btn-file
                                | Chooce Avatar
                                input(type="file" name="file" required hidden).hide
                               
                        button.btn
                            | Sign Up